<h1>Edit Profile</h1>

<%= form_for @user do |f| %>
  <%= f.label :Email %>:
  <%= f.text_field :email %><br />

  <%= f.label "Landlord" %> <br />
    <%= f.check_box :role %> <br />

    <%= f.label "Tenant" %> <br />
    <%= f.check_box :role %> <br />

     <%= f.label :Avatar %>:
  <%= f.file_field :avatar %><br />

  <%= f.submit %>
<% end %>