<h1>Edit Profile</h1>

<%= form_for @user do |f| %>
  <%= f.label :Email %>:
  <%= f.text_field :email %><br />

  <%= f.radio_button("role", "landlord") %><%= f.label "Landlord" %> <br />
  
  <%= f.radio_button("role", "tenant") %><%= f.label "Tenant" %> <br />

  <%= f.label :Avatar %>:
  <%= f.file_field :avatar %><br />

  <%= f.submit %>
<% end %>